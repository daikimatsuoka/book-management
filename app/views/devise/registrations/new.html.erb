<div class="user-container">
  <%= form_with model: @user, url: user_registration_path, class: 'new_user', local: true do |f| %>
    <%= render partial: "shared/error_messages", locals: { model: f.object } %>
    <div class="field">
      <%= f.text_field :nickname, autofocus: true, maxlength: "6", placeholder: "nickname(6文字以下)", class:"input-form" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"email", class:"input-form" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder:"password(半角英数字6文字以上)", class:"input-form" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"password(再入力)", class:"input-form" %>
    </div>

    <div class="actions">
      <%= f.submit "登録", class: "login-btn" %>
    </div>
  <% end %>
</div>