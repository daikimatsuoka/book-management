<div class="user-container">
  <%= form_with model: @user, url: user_session_path, class: 'new_user', local: true do |f| %>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class:"input-form" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "password(半角英数字6文字以上)", class:"input-form" %>
    </div>

    <div class="actions">
      <%= f.submit "LOGIN", class: "login-btn" %>
    </div>

  <% end %>
</div>
